<main class="register">
 <nav>
      <h1><%= image_tag "logo.png" %> <%= link_to "Coast Car", root_path %></h1>
      <ul>
       <% if current_user %>
        <li class="username">
            Welcome, <%= current_user.name %>!
        </li>
        <% end %>
        <li class="offerbtn"><%= link_to "Offer a ride", current_user ?
        offer_a_ride_path :
        register_path(user_type: :driver) %></li>
        <li><%= link_to "How it works", "#{root_path}#howdoesitwork" %></li>
        <% if current_user %>
        <li>
            <%= link_to "Sign Out", signout_path %>
        </li>
        <% end %>
      </ul>
    </nav>
  <section class="signup">
    <div class="modal">
      <h1>Create Your Account</h1>
      <div class="twitter"><%= icon "twitter", class: 'fa-inverse' %><%= link_to "Sign in with Twitter", "/auth/twitter" %></div>
      <div class="facebook"><%= icon "facebook", class: 'fa-inverse' %><%= link_to "Sign in with Facebook", "/auth/facebook" %></div>
    </div>
  </section>
</main>